#include <iostream>
#include <algorithm>
using namespace std;

struct Node {
    char data;
    Node* next;
};

class Stack {
    Node* top = NULL;
public:
    void push(char x) {
        Node* n = new Node{x, top};
        top = n;
    }
    char pop() {
        if (!top) return '\0';
        char x = top->data;
        Node* temp = top;
        top = top->next;
        delete temp;
        return x;
    }
    char peek() { return top ? top->data : '\0'; }
    bool empty() { return top == NULL; }
};

int prec(char c) {
    if (c == '^') return 3;
    if (c == '*' || c == '/') return 2;
    if (c == '+' || c == '-') return 1;
    return 0;
}

string infixToPostfix(string exp) {
    Stack st;
    string res = "";
    for (char c : exp) {
        if (isalnum(c)) res += c;
        else if (c == '(') st.push(c);
        else if (c == ')') {
            while (!st.empty() && st.peek() != '(')
                res += st.pop();
            st.pop();
        } else {
            while (!st.empty() && prec(st.peek()) >= prec(c))
                res += st.pop();
            st.push(c);
        }
    }
    while (!st.empty()) res += st.pop();
    return res;
}

string infixToPrefix(string exp) {
    reverse(exp.begin(), exp.end());
    for (char &c : exp)
        if (c == '(') c = ')';
        else if (c == ')') c = '(';
    string pre = infixToPostfix(exp);
    reverse(pre.begin(), pre.end());
    return pre;
}

int main() {
    string infix;
    cout << "Enter Infix: ";
    cin >> infix;
    cout << "Postfix: " << infixToPostfix(infix) << endl;
    cout << "Prefix: " << infixToPrefix(infix);
}


